# ===== Digital Inventory - Environment Configuration =====

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Security
SESSION_SECRET=your-super-secret-session-key-change-in-production-please
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Database
DB_PATH=./data/inventory.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Request Size Limits
MAX_REQUEST_SIZE=10mb

# Server Timeout
SERVER_TIMEOUT=30000

# Logging
LOG_LEVEL=info

# QR Code Configuration
QR_CODE_OUTPUT_DIR=./public/qr-codes
QR_CODE_DEFAULT_FORMAT=png
QR_CODE_WIDTH=300
QR_CODE_QUALITY=0.95

# Redis Configuration (optional - falls back to in-memory if not available)
USE_REDIS=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Production Settings (set to production values when deploying)
# NODE_ENV=production
# BASE_URL=https://yourdomain.com
# CORS_ORIGIN=https://yourdomain.com
# LOG_LEVEL=warn
